{
  "name": "portal-frontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:component && tsc && vite build",
    "build:component": "cd auth-libs/web-component && pnpm install && pnpm build",
    "preview": "vite preview",
